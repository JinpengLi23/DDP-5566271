def case_counter(text):
    Uppercase_letters = 0
    lowercase_letters = 0
    for char in text:
        if char.isalpha():
            if char.isupper():
                Uppercase_letters += 1
            elif char.islower():
                lowercase_letters += 1
    print(f"Uppercase letters: {Uppercase_letters} , Lowercase letters: {lowercase_letters}")

user_input = input("Enter a phrase: ")
case_counter(user_input)
